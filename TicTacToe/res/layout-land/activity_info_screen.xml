<RelativeLayout xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.tictactoe.InfoScreen" xmlns:android="http://schemas.android.com/apk/res/android">




    <Button

        android:id="@+id/three"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_alignParentRight="true"

        android:onClick="Infoback"

        android:text="@string/back" />

    <TextView
        android:id="@+id/human"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/brightness"
        android:layout_alignParentTop="true"
        android:text="@string/abouttic"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#B61C1C" />

    <TextView
        android:id="@+id/brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/three"
        android:layout_below="@+id/human"
        android:text="@string/description"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#320EE8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/humanCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/brightness"
        android:layout_below="@+id/brightness"
        android:text="@string/developedby"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2A7717" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/humanCounter"
        android:layout_below="@+id/humanCounter"
        android:shadowColor="@color/black"
        android:text="@string/harsh"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#7E0890"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/three"
        android:layout_alignLeft="@+id/textView4"
        android:text="@string/sanvir"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#EF205E"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/three"
        android:layout_alignBottom="@+id/three"
        android:layout_alignLeft="@+id/textView6"
        android:text="@string/himangi"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F00C0C"
        android:textSize="22sp" />

</RelativeLayout>
